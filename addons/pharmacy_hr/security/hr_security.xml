<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base.module_category_pharmacy_management" model="ir.module.category">
        <field name="name">Pharmacy Management</field>
        <field name="sequence">9</field>
    </record>

    <record id="group_pharmacy_manager" model="res.groups">
        <field name="name">Pharmacy Manager</field>
        <field name="category_id" ref="base.module_category_pharmacy_management"/>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        <field name="comment">This user will have access to pharmacy configuration and management.</field>
    </record>

    <record id="group_pharmacy_assistant" model="res.groups">
        <field name="name">Pharmacy Assistant</field>
        <field name="comment">The user will have access to the human resources configuration as well as statistic reports.</field>
        <field name="category_id" ref="base.module_category_pharmacy_management"/>
        <field name="implied_ids" eval="[(4, ref('group_pharmacy_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

<data noupdate="1">
    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('group_pharmacy_hr_manager'))]"/>
    </record>

    <record id="pharmacy_inventory_rule" model="ir.rule">
        <field name="name">Pharmacy Inventory Access Rule</field>
        <field name="model_id" ref="model_pharmacy_inventory"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="pharmacy_orders_rule" model="ir.rule">
        <field name="name">Pharmacy Orders Access Rule</field>
        <field name="model_id" ref="model_pharmacy_orders"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="pharmacy_employee_public_comp_rule" model="ir.rule">
        <field name="name">Pharmacy Employee multi company rule</field>
        <field name="model_id" ref="model_pharmacy_employee_public"/>
        <field name="domain_force">['|',('company_id', '=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="pharmacy_job_comp_rule" model="ir.rule">
        <field name="name">Pharmacy Job multi company rule</field>
        <field name="model_id" ref="model_pharmacy_job"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="ir_rule_res_partner_pharmacy_internal_users" model="ir.rule">
        <field name="name">Pharmacy: Prevent non-pharmacy officers from accessing employee bank accounts</field>
        <field name="model_id" ref="base.model_res_partner_pharmacy"/>
        <field name="domain_force">[('partner_id.employee_ids', '=', False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="ir_rule_res_partner_pharmacy_employees" model="ir.rule">
        <field name="name">Pharmacy: Allow pharmacy officers from accessing employee bank accounts</field>
        <field name="model_id" ref="base.model_res_partner_pharmacy"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('pharmacy.group_pharmacy_manager'))]"/>
    </record>

    <record id="ir_rule_pharmacy_contract_type_multi_company" model="ir.rule">
        <field name="name">Pharmacy Contract Type: Multi Company</field>
        <field name="model_id" ref="model_pharmacy_contract_type"/>
        <field name="domain_force">['|', ('country_id', '=', False), ('country_id', 'in', user.env.companies.country_id.ids)]</field>
    </record>

    <record id="mail_plan_rule_group_pharmacy_manager" model="ir.rule">
        <field name="name">Manager can edit employee plan</field>
        <field name="groups" eval="[(4, ref('group_pharmacy_manager'))]"/>
        <field name="model_id" ref="mail.model_mail_activity_plan"/>
        <field name="domain_force">[('res_model', '=', 'pharmacy.employee')]</field>
        <field name="perm_read" eval="False"/>
    </record>

    <record id="mail_plan_templates_rule_group_pharmacy_manager" model="ir.rule">
        <field name="name">Manager can edit employee plan template</field>
        <field name="groups" eval="[(4, ref('group_pharmacy_manager'))]"/>
        <field name="model_id" ref="mail.model_mail_activity_plan_template"/>
        <field name="domain_force">[('plan_id.res_model', '=', 'pharmacy.employee')]</field>
        <field name="perm_read" eval="False"/>
    </record>

</data>
</odoo>
